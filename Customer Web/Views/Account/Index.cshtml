@model MCBA_Web.Models.Customer
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <h1 class="display-4">Welcome, @Model.Name</h1>

    <h3>Your Accounts</h3>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountNumber)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].AccountType)</th>
            <th>@Html.DisplayNameFor(x => x.Accounts[0].Balance)</th>
            <th></th>
        </tr>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@Html.DisplayFor(x => account.AccountNumber)</td>
                <td>@Html.DisplayFor(x => account.AccountType)</td>
                <td>@Html.DisplayFor(x => account.Balance)</td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="Account" asp-action="Deposit" asp-route-accountNumber="@account.AccountNumber">Deposit</a>
                </td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="Account" asp-action="Withdraw" asp-route-accountNumber="@account.AccountNumber">Withdraw</a>
                </td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="Account" asp-action="Transfer" asp-route-accountNumber="@account.AccountNumber">Transfer</a>
                </td>
                <td>
                    <form asp-action="MyStatements">
                        <input type="hidden" name="accountNumber" value="@account.AccountNumber" />
                        <input type="submit" class="btn btn-primary" value="My Statements" />
                    </form>
                </td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="Account" asp-action="ScheduledBills" asp-route-accountNumber="@account.AccountNumber">BillPay</a>
                </td>
            </tr>
        }
    </table>
</div>
