@model MCBA_Web.Models.BillPay
@{
    ViewData["Title"] = "Reschedule BillPay";
    var account = (Account)ViewBag.Account;
}

<head>
    <title>MCBA - Reschedle BillPay</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap.collapse@5.0.0/dist/js/bootstrap.collapse.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
</head>
<img src="~/img/Home/logo.png" width="160" height="160" class="img-fluid d-inline-block align-top" alt="MCBA Logo">
<div class="card-body">
    <div id="popupCard" style="width: 550px; height: 600px; display:block; box-shadow: 0px 0px 5px #999; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
        <div style="margin-top: 100px;" class="form-container">
            <form asp-controller="Account" asp-action="EditBillPay" style="margin-left: 180px">
                <h4 style="margin-left: 10px; margin-bottom: 30px;">Reschedle BillPay: @account.AccountNumber</h4>
                <input type="hidden" asp-for="AccountNumber" />
                <input type="hidden" asp-for="BillPayID" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="width: 200px;">
                    @* ReSharper disable once UnknownCssClass *@
                    <label asp-for="PayeeID" class="control-label"></label>
                    <input asp-for="PayeeID" class="form-control" />
                    <span asp-validation-for="PayeeID" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 200px;">
                    @* ReSharper disable once UnknownCssClass *@
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 200px;">
                    @* ReSharper disable once UnknownCssClass *@
                    <label asp-for="ScheduleTimeUtc" class="control-label"></label>
                    <input asp-for="ScheduleTimeUtc" value="@Model.ScheduleTimeUtc.ToLocalTime().ToString("yyyy-MM-ddTHH:mm:ss")" type="datetime-local" class="form-control" />
                    <span asp-validation-for="ScheduleTimeUtc" class="text-danger"></span>
                </div>
                <div class="form-group" style="width: 200px;">
                    @* ReSharper disable once UnknownCssClass *@
                    <label asp-for="PaymentPeriod" class="control-label"></label>
                    <select asp-for="PaymentPeriod" asp-items="Html.GetEnumSelectList<PaymentPeriodType>()" class="form-control"> </select>
                    <span asp-validation-for="PaymentPeriod" class="text-danger"></span>
                </div>
                <div class="form-group" style="display:flex; gap: 15px;">
                    <input type="submit" value="Edit BillPay" class="btn btn-primary" style="margin-top: 25px; width: 100px; height: 35px" />
                </div>
            </form>
        </div>
    </div>
</div>