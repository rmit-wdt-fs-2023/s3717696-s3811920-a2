@model Customer

<form asp-controller="Address" asp-action="CreateAddress" asp-route-customerId="@Model.CustomerID">
    <div class="form-group">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" type="text" class="form-control" id="Address.Street" name="Address.Street" value="">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" type="text" class="form-control" id="Address.City" name="Address.City" value="">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.Postcode">Postcode</label>
        <input asp-for="Address.Postcode" type="text" class="form-control" id="Address.Postcode" name="Address.Postcode" value="">
        <span asp-validation-for="Address.Postcode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address.State"></label>
        <select asp-for="Address.State" asp-items="Html.GetEnumSelectList<StateType>()" class="form-control"></select>
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-12 text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @Html.ValidationMessage("CreateFailed", new { @class = "text-danger" })
        </div>
    </div>
</form>

